<body>
{{>header}}
<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->
<a href="/login" ><h2 class="log">Login</h2></a>
<a href="/register" class="active"> <h2 class="log">Registro</h2></a>   
{{>log-reg}}
    <!-- Login Form -->
    <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="post" action="/usuario/create">
                    <h3>Inserte sus datos</h3>
                        <div class="form-group">
                           
                            <div class="col-md-12">
                                <input id="fname" name="name" type="text" placeholder="Nombre" class="form-control">
                            </div>
   
                        </div>
                        <div class="form-group">
                            
                            <div class="col-md-12">
                                <input id="lname" name="apel" type="text" placeholder="Apellido" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            
                            <div class="col-md-12">
                                <input id="email" name="email" type="email" placeholder="Email" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                          
                            <div class="col-md-12">
                                <input id="pass" name="pass" type="password" placeholder="Password" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Registrar</button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>


               

